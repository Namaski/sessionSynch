<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <script defer src="https://kit.fontawesome.com/d80deb4694.js" crossorigin="anonymous"></script>

    {% endblock %}

</head>

<body>
    <header>
        <h3>
            <a  href="{{path('app_home')}}">
                Tableau de bord
            </a>
        </h3>
        <ul>
            <a href="{{path('app_session')}}">
                <li>SESSION</li>
            </a>
            <a href="{{path('app_course')}}">
                <li>MODULES</li>
            </a>
            <a href="{{path('app_formation')}}">
                <li>FORMATION</li>
            </a>
        </ul>

            <i class="fa-solid fa-bars hamburgerIcon"></i>
            
    </header>

    <main>
        {% block body %}
        {% endblock %}
    </main>

    <footer>
        <p>Copyright © SessionSync 2024</p>
    </footer>

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}
</body>

</html>