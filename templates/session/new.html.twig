{% extends 'base.html.twig' %}

{% block title %}Add Session!{% endblock %}

{% block body %}


<div class="wrapper">

    <h1>Ajouter une Session</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-sm">{{ form_row(form.sessionName) }}</div>
    </div>

    <div class="row">
        <div class="col-sm">{{ form_row(form.startDate) }}</div>
        <div class="col-sm">{{ form_row(form.endDate) }}</div>
    </div>

    <div class="row">
        <div class="col-sm">{{ form_row(form.formation) }}</div>
    </div>

    <div class="row">
        <div class="col-sm">{{ form_row(form.maxStudent) }}</div>
    </div>

    {{ dump(form) }}
    {# {{ dump(form.tags.vars.prototype.name) }} #}
    {# MODULES #}
    <h3>Modules :</h3>

    <div id="programme-fields-list" class="remove-collection-widget"
            {# data-prototype="{{ form_widget(form.vars.prototype)|e }}" data-session="{{ sessionId }}"
            data-widget-tags="{{ '<p></p>' |e }}" data-widget-counter="{{ form.programs|length }}" #}
            >
            {% for programField in form.vars.value.programs %}
            <p>
                {{ form_errors(programField) }}
            </p>
            {% endfor %}
        </div>
 
        <div class="form-group row flex-action">
            <button type="button" class="add-another-collection-widget ui-button ui-widget ui-corner-all"
                data-list-selector="#programme-fields-list">Ajouter Programe(s)
            </button>
        </div>
    </div



    {# ELEVE #}
    <div>
        <h3> Ajouter des El√®ves :</h3>
    </div>
    <div class="row">
        <div class="col-sm">{{ form_row(form.students) }}</div>
    </div>

    {{ form_row(form.Valider) }}

    {{ form_end(form) }}

</div>


{% endblock %}